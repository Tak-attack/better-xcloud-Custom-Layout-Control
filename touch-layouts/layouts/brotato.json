    "one-handed-left": {
      "name": "One-handed (Left)",
      "content": {
        "layers": {
          "DpadMovement": {
            "left": {
              "inner": [
                {
                  "type": "directionalPad",
                  "scale": 1.5,
                  "styles": {
                    "default": {
                      "gradient": {
                        "color": "#ffffff80"
                      }
                    }
                  }
                }
              ]
            }
          }
        },
        "left": {
          "inner": [
            {
              "type": "joystick",
              "relative": false,
              "axis": {
                "input": "axisXY",
                "output": "leftJoystick"
              }
            }
          ],
          "outer": [
            null,
            {
              "type": "button",
              "action": "gamepadA",
              "styles": {
                "idle": {
                  "opacity": 0.7
                }
              }
            },
            null,
            null,
            null,
            null,
            {
              "type": "button",
              "action": "gamepadB",
              "styles": {
                "idle": {
                  "opacity": 0.7
                }
              }
            },
            {
              "type": "button",
              "action": "leftBumper",
              "styles": {
                "idle": {
                  "opacity": 0.7
                }
              }
            }
          ]
        },
        "upper": {
          "right": [
            {
              "type": "button",
              "action": "menu"
            },
            {
              "type": "button",
              "toggle": true,
              "action": {
                "type": "layer",
                "target": "DpadMovement"
              },
              "styles": {
                "default": {
                  "faceImage": {
                    "type": "icon",
                    "value": "dPad"
                  }
                },
                "toggled": {
                  "background": {
                    "type": "color",
                    "value": "#ffffff10"
